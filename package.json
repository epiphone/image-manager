{
  "name": "image-manager",
  "version": "0.1.0",
  "repository": "https://github.com/epiphone/image-manager",
  "description": "",
  "main": "dist/resizer/index.js",
  "scripts": {
    "build": "npm run typecheck && npm run clean && npm run resizer:build && npm run test:build && npm run resizer:package && npm run test:package",
    "resizer:build": "npm run typecheck && parcel build -t node -d dist/resizer --no-source-maps src/resizer/handler.ts",
    "resizer:zip": "(cd src/resizer && zip -9 -x *.ts* -r resizer.zip .)",
    "clean": "rm -f src/**/*.zip",
    "lint": "tslint -p tsconfig.json",
    "sls": "sls",
    "test": "echo \"Error: no test specified\" && exit 1",
    "typecheck": "tsc --noEmit"
  },
  "author": "Aleksi Pekkala",
  "license": "MIT",
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "devDependencies": {
    "@types/express": "^4.16.1",
    "@types/node": "^11.13.0",
    "@types/sharp": "^0.22.1",
    "parcel-bundler": "^1.12.3",
    "prettier": "^1.16.4",
    "tslint": "^5.15.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.4.1"
  },
  "dependencies": {
    "@google-cloud/storage": "^2.4.3",
    "express": "^4.16.4",
    "sharp": "^0.22.0"
  }
}
